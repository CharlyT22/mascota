<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
   <link href="https://blackrockdigital.github.io/startbootstrap-grayscale/css/grayscale.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Cabin:700' rel='stylesheet' type='text/css'>
    <tr>
      <th>ID</th>
      <th>Especie</th>
      <th>Edad (Años)</th>
      <th>Peso (Kg)</th>
      <th>Precio (MXN)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.id %></td>
        <td><%= animal.especie %></td>
        <td><%= animal.edad %></td>
        <td><%= animal.peso %></td>
        <td><%= animal.precio %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

